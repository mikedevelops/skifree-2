{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run server\" \"npm run client -- --watch\"",
    "server": "nodemon --config ./nodemon.json",
    "client": "webpack",
    "test": "jest --config jest.config.json",
    "start": "ts-node -T src/server.ts",
    "build:phaser": "cd node_modules/phaser && npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/webpack": "^3.8.17",
    "@types/webpack-dev-middleware": "^2.0.2",
    "awesome-typescript-loader": "^3.4.1",
    "concurrently": "^4.0.1",
    "expose-loader": "^0.7.4",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.1",
    "nodemon": "^1.18.6",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-dev-server": "^2.9.7"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@types/node": "^10.12.9",
    "@types/socket.io": "^2.1.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/express": "^4.16.0",
    "phaser-ce": "^2.9.4",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "express": "^4.16.2",
    "ts-node": "^7.0.1",
    "typescript": "^2.6.2"
  }
}
